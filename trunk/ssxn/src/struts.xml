<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>
	<constant name="struts.devMode" value="true" />
	<constant name="struts.i18n.encoding" value="utf-8" />
	<constant name="struts.configuration.xml.reload" value="true" />
 	<constant name="struts.objectFactory" value="spring" />
 	<package name="ssxn" extends="struts-default" abstract="true">
 		<global-results>
 			<result name="login" type="freemarker">/WEB-INF/template/login.ftl</result>
 		</global-results>
 	</package>
 	<package name="user" extends="ssxn" namespace="/user">
 		<action name="login" class="com.ssxn.action.UserAction" method="login">
 			<result name="success" type="freemarker">/WEB-INF/template/${identity}.ftl</result>
 		</action>
 		<action name="*" class="com.ssxn.action.UserAction" method="{1}" />
 	</package>
 	<package name="order" extends="ssxn" namespace="/order">
 		<action name="*" class="com.ssxn.action.OrderAction" method="{1}" />
 	</package>
</struts>